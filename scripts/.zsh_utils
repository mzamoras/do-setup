#!/bin/sh
alias ddstop="systemctl stop docker"
alias ddstart="systemctl start docker"
alias ddreload="systemctl reload docker"
alias ddrestart="systemctl reload docker"
alias ddedaemon="vi /etc/docker/daemon.json"
alias utils="cat ~/.zsh_utils"
alias ebash="vi ~/.zsh_utils"
alias rbash="cd ~ && source .zshrc"


# JENKINS KEY
function jkey {
    docker exec -it $1 cat /var/jenkins_home/secret:qs/initialAdminPassword
}

# ACCESS TO DOCKER
function ddaccess {
    if [[ -z $1 ]]
    then
        echo "\nPlease provide the container name to access\n\n"
        docker ps
    else
        docker exec -it $1 /bin/bash
    fi
}

# DOCKER COMPOSE
function ddc {
    if [[ -z $2 ]]
    then
        echo "\nPlease provide the container name and action (up, down)"
        echo "\nUse: ddc name up\n\n"
    else
        cd ~/containers/$1
        docker-compose -f $1.yaml --name -d $2
    fi
}
